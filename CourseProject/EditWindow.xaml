<Window x:Class="CourseProject.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CourseProject"
        mc:Ignorable="d"
        Title="EditWindow" Height="250" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        
        <DataGrid Name="DataGridDate" Grid.Row="0"  Margin="5"></DataGrid>
        <Button Name="Save" Click="Save_OnClick" Grid.Row="1" Grid.Column="0"  Content="Save" Margin="5,0,5,5"></Button>
        
    </Grid>
</Window>
